@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Web/dist/assets/demo/datatables-demo.js"></script>


<main>
    <div class="container-fluid">
        <h1 class="mt-4">Departman Tablosu</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Departman Adı: @ViewBag.dprt</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable Example</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Personel Ad</th>
                                <th>Personel Soyad</th>
                                <th>Personel Görsel</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Personel Ad</th>
                                <th>Personel Soyad</th>
                                <th>Personel Görsel</th>
                                <th>Detaylar</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PersonelID</td>
                                    <td>@item.PersonelAd</td>
                                    <td>@item.PersonelSoyad</td>
                                    <td>@item.PersonelGorsel</td>
                                    <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-secondary">Satışlar</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

               

            </div>
        </div>
    </div>
</main>


